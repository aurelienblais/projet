.row
  .col-sm-3
  .col-sm-6
    = form_for @town do |f|
      - if @town.errors.any?
        #error_explanation
          %h2= "#{pluralize(@town.errors.count, "error")} prohibited this town from being saved:"
          %ul
            - @town.errors.full_messages.each do |message|
              %li= message

      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .actions
        = f.submit 'Save'
